@model BookStore.Models.Domain.Books

@{
     
}


<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Add Movies</h2>


    <div class="input-container">
        <a class="btn btn-sec" href="/Books/BookList">Book List</a>
    </div>
    <div class="input-container">
        <label asp-for="BookName" class="w-40">Title</label>
        <input type="text" class="input" asp-for="BookName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="BookName"> </span>
    </div>

    <div class="input-container">
        <label asp-for="BookImage" class="w-40">Image</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Genres" class="w-40">Genre</label>
        <select asp-items="Model.GenreList" class="input" asp-for="Genres">
            <option value="">--select--</option>

        </select>
    </div>

    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Genres"> </span>
    </div>

    <div class="input-container">
        <label asp-for="LaunchYear" class="w-40">Lauch Year</label>
        <input type="text" class="input" asp-for="LaunchYear">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="LaunchYear"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Author" class="w-40">Author</label>
        <input type="text" class="input" asp-for="Author">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Author"> </span>
    </div>
    <div class="input-container">
        <label asp-for="Price" class="w-40">Price {$} </label>
        <input type="text" class="input" asp-for="Price">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Price"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>

    </div>
</form>
